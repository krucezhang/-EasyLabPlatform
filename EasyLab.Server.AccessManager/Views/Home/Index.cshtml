<h3>TEST PAGE</h3>
<ol class="round">
    <li class="one">
        <p><label for="username" style="float: left; margin:5px 10px; width:90px;">UserName: </label>
        <input id="username" class="ui-input" /></p>
    </li>

    <li class="two">
       <p><label for="password" style="float: left; margin:5px 10px; width:90px;">Password: </label>
        <input id="password" class="ui-input" /></p> 
    </li>

    <li class="three">
        <label for="comment" style="width:90px; margin:5px 10px;">Comment: </label>
        <textarea id="comment" style="margin:5px 10px;"></textarea>
    </li>
    <li class="four">
        <input type="button" id="btnSubmit" name="submit" value="Submit" style="margin-left:12px;" />
    </li>
</ol>
<script type="text/javascript">
    $("#btnSubmit").click(function () {
        var createUserAPI = '@(ViewBag.Address)' + 'users/';
        var userData = {
            
                LoginName: $('#username').val(),
                Password: $('#password').val(),
                Comment: $('#comment').val()
            
        }
        var userJSON = JSON.stringify(userData);

        $.ajax({
            type: 'POST',
            async: false,
            url: createUserAPI,
            data: userJSON,
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            success: function (data) {
                alert("success");
            },
            error: function (data) {
                alert(data.responseText);
            }
        });

        var PostData = {
